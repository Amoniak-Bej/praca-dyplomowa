{% extends 'base.html.twig' %}

{% block title %}Edycja pojazdu{% endblock %}

{% block body %}
    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
    <div class="d-flex justify-content-center align-items-center">
        <div class="card shadow-sm border-0 rounded-lg w-75">
            <div class="card-header bg-light text-center fw-bold p-3">
                <div class="card-title">
                    Edycja pojazdu
                </div>
            </div>
            <div class="card-body p-3">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            {{ form_widget(form.licenseNumber, {
                                'attr': {
                                    'placeholder': 'Numer rejestracyjny',
                                    'class': 'form-control' ~ (form.licenseNumber.vars.errors|length > 0 ? ' is-invalid' : '')
                                }
                            }) }}
                            {{ form_label(form.licenseNumber) }}
                            {% if form.licenseNumber.vars.errors|length > 0 %}
                                <div class="invalid-feedback">
                                    {{ form_errors(form.licenseNumber) }}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            {{ form_widget(form.vehicleIdentificationNumber, {
                                'attr': {
                                    'placeholder': 'VIN',
                                    'class': 'form-control' ~ (form.vehicleIdentificationNumber.vars.errors|length > 0 ? ' is-invalid' : '')
                                }
                            }) }}
                            {{ form_label(form.vehicleIdentificationNumber) }}
                            {% if form.vehicleIdentificationNumber.vars.errors|length > 0 %}
                                <div class="invalid-feedback">
                                    {{ form_errors(form.vehicleIdentificationNumber) }}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            {{ form_widget(form.brand, {
                                'attr': {
                                    'placeholder': 'Marka',
                                    'class': 'form-control' ~ (form.brand.vars.errors|length > 0 ? ' is-invalid' : '')
                                }
                            }) }}
                            {{ form_label(form.brand) }}
                            {% if form.brand.vars.errors|length > 0 %}
                                <div class="invalid-feedback">
                                    {{ form_errors(form.brand) }}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            {{ form_widget(form.model, {
                                'attr': {
                                    'placeholder': 'Model',
                                    'class': 'form-control' ~ (form.model.vars.errors|length > 0 ? ' is-invalid' : '')
                                }
                            }) }}
                            {{ form_label(form.model) }}
                            {% if form.model.vars.errors|length > 0 %}
                                <div class="invalid-feedback">
                                    {{ form_errors(form.model) }}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
