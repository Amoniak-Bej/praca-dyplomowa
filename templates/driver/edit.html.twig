{% extends 'base.html.twig' %}

{% block title %}Edytuj kierowcę{% endblock %}

{% block body %}
    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
    <div class="d-flex justify-content-center align-items-center">
        <div class="card shadow-sm border-0 rounded-lg w-75">
            <div class="card-header bg-light text-center fw-bold p-3">
                <div class="card-title">
                    Edytuj kierowcę
                </div>
            </div>
            <div class="card-body p-3">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            {{ form_widget(form.name, {
                                'attr': {
                                    'placeholder': 'Imię',
                                    'class': 'form-control' ~ (form.name.vars.errors|length > 0 ? ' is-invalid' : '')
                                }
                            }) }}
                            {{ form_label(form.name) }}
                            {% if form.name.vars.errors|length > 0 %}
                                <div class="invalid-feedback">
                                    {{ form_errors(form.name) }}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            {{ form_widget(form.surname, {
                                'attr': {
                                    'placeholder': 'Nazwisko',
                                    'class': 'form-control' ~ (form.surname.vars.errors|length > 0 ? ' is-invalid' : '')
                                }
                            }) }}
                            {{ form_label(form.surname) }}
                            {% if form.surname.vars.errors|length > 0 %}
                                <div class="invalid-feedback">
                                    {{ form_errors(form.surname) }}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            {{ form_widget(form.phoneNumber, {
                                'attr': {
                                    'placeholder': 'Numer telefonu',
                                    'class': 'form-control' ~ (form.phoneNumber.vars.errors|length > 0 ? ' is-invalid' : '')
                                }
                            }) }}
                            {{ form_label(form.phoneNumber) }}
                            {% if form.phoneNumber.vars.errors|length > 0 %}
                                <div class="invalid-feedback">
                                    {{ form_errors(form.phoneNumber) }}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            {{ form_widget(form.pesel, {
                                'attr': {
                                    'placeholder': 'PESEL',
                                    'class': 'form-control' ~ (form.pesel.vars.errors|length > 0 ? ' is-invalid' : '')
                                }
                            }) }}
                            {{ form_label(form.pesel) }}
                            {% if form.pesel.vars.errors|length > 0 %}
                                <div class="invalid-feedback">
                                    {{ form_errors(form.pesel) }}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            {{ form_widget(form.employmentDate, {
                                'attr': {
                                    'placeholder': 'Data zatrudnienia',
                                    'class': 'form-control datepicker' ~ (form.employmentDate.vars.errors|length > 0 ? ' is-invalid' : '')
                                }
                            }) }}
                            {{ form_label(form.employmentDate) }}
                            {% if form.employmentDate.vars.errors|length > 0 %}
                                <div class="invalid-feedback">
                                    {{ form_errors(form.employmentDate) }}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            {{ form_widget(form.terminationDate, {
                                'attr': {
                                    'placeholder': 'Data zwolnienia',
                                    'class': 'form-control datepicker' ~ (form.terminationDate.vars.errors|length > 0 ? ' is-invalid' : '')
                                }
                            }) }}
                            {{ form_label(form.terminationDate) }}
                            {% if form.terminationDate.vars.errors|length > 0 %}
                                <div class="invalid-feedback">
                                    {{ form_errors(form.terminationDate) }}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            {{ form_widget(form.guardian, {
                                'attr': {
                                    'class': 'form-select select2' ~ (form.guardian.vars.errors|length > 0 ? ' is-invalid' : '')
                                }
                            }) }}
                            {{ form_label(form.guardian) }}
                            {% if form.guardian.vars.errors|length > 0 %}
                                <div class="invalid-feedback">
                                    {{ form_errors(form.guardian) }}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>

            </div>

            <div class="card-footer d-flex justify-content-end gap-2">
                {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
                <a href="{{ path('app_driver') }}" class="btn btn-secondary">Powrót</a>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}

{% block javascripts %}
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            flatpickr(".datepicker", {
                enableTime: false,
                dateFormat: "Y-m-d",
                locale: "pl"
            });
        });
    </script>
{% endblock %}
